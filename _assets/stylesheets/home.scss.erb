@import 'variables';

.main-banner{
  width: 100%;
  position: relative;
  height: 50vh;
  background-image: url(<%= asset_path '../images/friendsgiving.jpg' %>);
  background-size: cover;
}

.banner-text{
  color: $text-yellow;
  font-size: 5em;
  text-align: center;
  position: absolute;
  top: 30%;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, -50%);
  font-family: 'Amatic SC', sans-serif;
}

.banner-copy{
  text-align: center;
  position: absolute;
  bottom: 0;
  color: $text-yellow;
  width: 77%;
  max-width: 610px;
  margin-bottom: 2vh auto 0 auto;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, 0);
  font-family: 'Coming Soon', sans-serif;
}
.page-content{
  background-color: $background-beige;
}
.leaf-runner{
  margin-top: 0.5vh;
  height: 40px;
  width: 100%;
  background-image: url(<%= asset_path '../images/leafrunner.svg' %>);
  opacity: 0.5;
}

.page-heading{
  border-bottom: double 4px $heading-brown;
}
.post-content{
  font-family: 'Josefin Slab', serif;
  float: left;
  color: #4F2E1E;
  margin-top: 2vh;
  
  margin-left: 0;

  & a{
    color: #4F2E1E;
  }
}

.recipe-image{
  width: 30%;
  display: block;
}

.page-heading{
    font-size: 24pt;
    color: $heading-brown;
    margin-bottom: 2vh;
    display: inline-block;
    vertical-align: bottom;
}

.placecards{
    font-family: 'Josefin Slab', serif;
    width:80%;
    margin-top: 2vh;
}

.head-icon{
  float:left;
  margin-left:10px;
  margin-right:10px;
  width:50px;
} 

.home{
  background-color: #efdbb8;
}
